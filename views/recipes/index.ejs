<%- include('../partials/header') %>

<div class="px-4 py-5 my-5 text-center">
  <h1 class="display-5 fw-bold">All Recipes</h1>
  <br>
  <div class="col-lg-6 mx-auto">
      <p class="lead">I grew up in the kitchen alongside my Ammu and conversations in my family are always about the next meal. I picked up their love for food along the way and share my food story with you.</p>
  </div>
</div>


<section class="p-4">
  <div class="d-flex mb-2 align-items-center">
    <h3>Latest Recipe</h3>
  </div>
<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
  <% recipes.forEach(function(r) { %>
      <div class="category__img category__img--large shadow">
        <a href="/recipes/<%= r._id %>"><img src="<%= r.image %>" alt="<%= r.title %>" class="img-thumbnail category__link rounded mx-auto d-block" loading="lazy" width="307" height="210" ></a>
        <h3 class="text-center align-bottom"><%= r.title %></h3>
      </div>
      
  <% }); %>
  
</div>
</section>

<%- include('../partials/footer') %>